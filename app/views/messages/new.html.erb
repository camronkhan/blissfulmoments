<div class="page" id="<%= @page_title.downcase %>">
	<article>
		<header class="page-header blurry-lights">
			<div class="semitransparent-mask flex-container flex-row flex-horizontal-center flex-vertical-center">
				<h1 class="page-title"><%= @page_title %></h1>
			</div>
		</header>
		<section class="container">
			<div class="row">
				<div class="col-md-7">
					<h2>Let's Talk<br><small id="discuss">Please take a moment to connect with me. I would love the opportunity to discuss potential projects or my qualifications with you.</small></h2>
					<%= form_tag(controller: 'messages', action: 'create', method: 'post') do %>
						<div class="form-group">
							<%= label_tag :name %>
							<%= text_field_tag :name, nil, placeholder: 'First and Last', class: 'form-control' %>
						</div>
						<div class="form-group">
							<%= label_tag :email %>
							<%= text_field_tag :email, nil, placeholder: 'email@example.com', class: 'form-control' %>
						</div>
						<div class="form-group">
							<%= label_tag :content, 'Message' %>
							<%= text_area_tag :content, nil, placeholder: 'What\'s on your mind?', rows: 8, class: 'form-control' %>
						</div>
						<%= submit_tag 'Submit', class: 'button' %>
						<%= link_to 'Cancel', contact_path, class: 'button button-secondary' %>
					<% end %>
				</div>
				<div class="col-md-1"></div>
				<div class="col-md-4">
					<%= render partial: 'partials/info_column' %>
				</div>
			</div>
		</section>
	</article>
</div>